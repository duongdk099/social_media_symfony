{% extends 'base.html.twig' %}

{% block title %}
	{{ subworld.name }}
	- Community
{% endblock %}

{% block body %}
	<h2 class="text-2xl font-bold text-white">{{ subworld.name }}</h2>
	<p class="text-gray-400">{{ subworld.description }}</p>

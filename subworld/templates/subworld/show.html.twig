{% extends 'base.html.twig' %}

{% block title %}{{ subworld.name }} - Community{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto mt-6 space-y-4">

    <!-- Subworld Details -->
    <div class="bg-white shadow-md rounded-lg p-4">
        <h1 class="text-2xl font-bold">{{ subworld.name }}</h1>
        <p class="text-gray-600 mt-2">{{ subworld.description }}</p>
        <p class="text-sm text-gray-500 mt-1">Created on {{ subworld.createdAt|date("F j, Y") }}</p>
        <p class="text-sm text-gray-500 mt-1">{{ member_count }} Members</p>
    </div>

    <!-- Posts in Subworld -->
    <h2 class="text-xl font-semibold mt-6">Posts</h2>

    {% for post in posts %}
        <div class="bg-white shadow-md rounded-lg p-4 flex">
            
            <!-- Voting System -->
            <div class="flex flex-col items-center pr-4">
                <!-- Upvote -->
                <button class="hover:scale-110 transition-transform">
                    <img src="{{ asset('assets/svg/shift.svg') }}" alt="Upvote" class="w-6 h-6">
                </button>
                <!-- Vote Count -->
                <span class="text-gray-700 font-semibold">{{ post.vote_count }}</span>
                <!-- Downvote (Rotated 180 degrees) -->
                <button class="hover:scale-110 transition-transform">
                    <img src="{{ asset('assets/svg/shift.svg') }}" alt="Downvote" class="w-6 h-6 rotate-180">
                </button>
            </div>

            <!-- Post Content -->
            <div class="w-full">
                <!-- Post Title -->
                <h2 class="text-lg font-bold text-gray-900">
                    <a href="{{ path('app_post_show', { 'id': post.post_id }) }}" class="hover:underline">{{ post.title }}</a>
                </h2>

                <!-- Metadata -->
                <p class="text-sm text-gray-500">
                    Posted by <a href="{{ path('app_user_show', { 'id': post.user_id }) }}" class="text-blue-600 hover:underline">{{ post.author }}</a> 
                    Â· {{ post.createdAt|date('F j, Y') }}
                </p>

                <!-- Post Body -->
                <p class="mt-2 text-gray-800">{{ post.content|length > 300 ? post.content|slice(0, 300) ~ '...' : post.content }}</p>

                <!-- Comments & Interactions -->
                <div class="mt-3 flex items-center space-x-4">
                    <a href="{{ path('app_post_show', { 'id': post.post_id }) }}" class="flex items-center text-gray-600 hover:text-blue-600">
                        <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5h6m-6 4h6m-6 4h6m-6 4h6"></path>
                        </svg>
                        {{ post.comment_count }} Comments
                    </a>
                </div>
            </div>
        </div>
    {% else %}
        <p class="text-gray-500">No posts in this community yet.</p>
    {% endfor %}

</div>
{% endblock %}

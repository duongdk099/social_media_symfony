{% extends 'base.html.twig' %}

{% block title %}Login - MySocial{% endblock %}

{% block body %}
<div class="flex items-center justify-center h-screen">
    <div class="bg-[#1C1C1C] p-8 rounded-lg shadow-lg w-96">
        <h2 class="text-2xl font-bold text-white text-center">Login</h2>

        {% if error %}
            <p class="text-red-500 text-sm text-center mt-2">Invalid credentials. Try again.</p>
        {% endif %}

        <form method="post" class="mt-6">
            <label class="text-white block">Email:</label>
            <input type="email" name="email" class="border border-gray-600 rounded-md p-2 w-full bg-gray-700 text-white" required>
            
            <label class="text-white block mt-4">Password:</label>
            <input type="password" name="password" class="border border-gray-600 rounded-md p-2 w-full bg-gray-700 text-white" required>

            <button class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-md w-full mt-6">
                Login
            </button>
        </form>

        <p class="text-gray-400 text-sm text-center mt-4">
            Don't have an account? <a href="{{ path('app_register') }}" class="text-blue-400 hover:underline">Sign Up</a>
        </p>
    </div>
</div>
{% endblock %}

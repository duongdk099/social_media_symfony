{% extends 'base.html.twig' %}

{% block title %}Register - MySocial
{% endblock %}

{% block body %}
	<div class="flex items-center justify-center h-screen">
		<div class="bg-[#1C1C1C] p-8 rounded-lg shadow-lg w-96">
			<h2 class="text-2xl font-bold text-white text-center">Sign Up</h2>

			{# Show email verification error messages #}
			{% for flash_error in app.flashes('verify_email_error') %}
				<div class="text-red-500 text-sm text-center mt-2">{{ flash_error }}</div>
			{% endfor %}

			{{ form_start(registrationForm) }}

			<div class="mt-4">
				{{ form_label(registrationForm.username, 'Username:', { 'label_attr': { class: 'text-white block' } }) }}
				{{ form_widget(registrationForm.username, { 'attr': { class: 'border border-gray-600 rounded-md p-2 w-full bg-gray-700 text-white' } }) }}
				{{ form_errors(registrationForm.username) }}
			</div>

			<div class="mt-4">
				{{ form_label(registrationForm.email, 'Email:', { 'label_attr': { class: 'text-white block' } }) }}
				{{ form_widget(registrationForm.email, { 'attr': { class: 'border border-gray-600 rounded-md p-2 w-full bg-gray-700 text-white' } }) }}
				{{ form_errors(registrationForm.email) }}
			</div>

			<div class="mt-4">
				{{ form_label(registrationForm.plainPassword, 'Password:', { 'label_attr': { class: 'text-white block' } }) }}
				{{ form_widget(registrationForm.plainPassword, { 'attr': { class: 'border border-gray-600 rounded-md p-2 w-full bg-gray-700 text-white' } }) }}
				{{ form_errors(registrationForm.plainPassword) }}
			</div>

			<div class="mt-4 flex items-center">
				{{ form_widget(registrationForm.agreeTerms, { 'attr': { class: 'h-4 w-4 text-blue-600' } }) }}
				<label for="{{ registrationForm.agreeTerms.vars.id }}" class="ml-2 text-white text-sm">
					I agree to the
					<a href="#" class="text-blue-400 hover:underline">terms and conditions</a>
				</label>
				{{ form_errors(registrationForm.agreeTerms) }}
			</div>

			<button class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-md w-full mt-6">
				Register
			</button>

			{{ form_end(registrationForm) }}

			<p class="text-gray-400 text-sm text-center mt-4">
				Already have an account?
				<a href="{{ path('app_login') }}" class="text-blue-400 hover:underline">Login</a>
			</p>
		</div>
	</div>
{% endblock %}
